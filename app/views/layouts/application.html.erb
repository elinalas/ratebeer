<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navibar">
  <%= link_to 'Breweries', breweries_path %>
  <%= link_to 'Beers', beers_path %>
  <%= link_to 'Ratings', ratings_path%>
  <%= link_to 'Beer Clubs', beer_clubs_path%>
  <strong>|</strong>
  <% if current_user%>
      Signed in as <%= link_to current_user.username, current_user%>
      <%=link_to 'Log out', logout_path, method: :delete%>
      <%= link_to 'Rate a beer', new_rating_path %>
      <%= link_to 'Join a club', new_membership_path%>

  <% else %>
      <%= link_to 'Log in', login_path%>

      <%= link_to 'Sign up', singup_path%>
  <%end%>

</div>

<% if session[:last_rating].nil? %>
    <p>no ratings given</p>
<% else %>
    <p>previous rating: <%= session[:last_rating] %></p>
<% end %>

<% if current_user %>
    <p><%= current_user.username %> signed in</p>
<% end %>

<%= yield %>

</body>
</html>
