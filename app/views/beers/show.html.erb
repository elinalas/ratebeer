<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= link_to @beer.style.name, styles_path(@beer.style) %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= link_to @beer.brewery.name, brewery_path(@beer.brewery_id) %>
</p>

<% if @beer.ratings.empty? %>
    Beer has not yet been rated!
<% else %>
    Beer has <%=pluralize( @beer.ratings.size, 'rating')%> ratings<br>
    Average rating: <%=@beer.average_rating%><br><br>
<% end %>

<% if current_user %>
    <h4>give a rating:</h4>

    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        score (1-50): <%= f.number_field :score %>
        <%= f.submit %>
    <% end %>
    <br><br>

    <%= link_to 'Edit', edit_beer_path(@beer) %>
    <%= link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back', beers_path %>


