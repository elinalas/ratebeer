
<p>
<h1><%= @style.name %></h1>
</p>

<p>
  <% if @style.description.nil? %>
      There is no description for this beer style.
  <% else %>
      <%= @style.description %>
  <%end%>
</p>

<h2>Beers</h2>
<p>
  <% @style.beers.each do |beer| %>
    <td><a href="<%=beer_path(beer.id) %>"><%=beer.name%></a></td><br>
<% end %>
</p>

<%= edit_and_destroy_buttons(@style) %> |
<%= link_to 'Back', styles_path%>
